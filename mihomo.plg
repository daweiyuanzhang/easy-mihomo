<!-- copy files from source directory -->
<FILE Run="/bin/bash">
<INLINE>
set -e
mkdir -p &plgPATH;
mkdir -p &emhttp;/scripts;

# 从源目录复制所有文件
echo "正在创建目录结构..."
mkdir -p &plgPATH;
mkdir -p &emhttp;/scripts;

if [ -d "&sourceDir;" ]; then
  echo "正在复制核心文件..."
  
  # 解压mihomo二进制文件
  if [ -f "&sourceDir;/mihomo-linux-amd64-v3-go123-v1.19.14.gz" ]; then
    echo "  - 正在解压 mihomo 核心..."
    MIHOME_TMP="/tmp/mihomo-latest"
    
    if gunzip -c "&sourceDir;/mihomo-linux-amd64-v3-go123-v1.19.14.gz" > "$MIHOME_TMP" 2>/dev/null; then
      # 解压成功，复制到目标位置
      cp "$MIHOME_TMP" "/usr/local/bin/mihomo"
      chmod +x "/usr/local/bin/mihomo"
      # 备份到插件目录
      cp "$MIHOME_TMP" "&plgPATH;/mihomo"
      rm -f "$MIHOME_TMP"
      echo "  ✓ mihomo 核心解压并安装完成"
    else
      echo "  ❌ mihomo 核心解压失败"
      rm -f "$MIHOME_TMP"
      exit 1
    fi
  elif [ -f "&sourceDir;/mihomo" ]; then
    echo "  - 复制 mihomo 二进制文件..."
    cp "&sourceDir;/mihomo" "/usr/local/bin/mihomo"
    chmod +x "/usr/local/bin/mihomo"
    cp "&sourceDir;/mihomo" "&plgPATH;/mihomo"
    echo "  ✓ mihomo 二进制文件已安装"
  else
    echo "  ❌ 找不到 mihomo 核心文件"
    exit 1
  fi
  
  # 配置文件需要用户自己上传，不再自动复制
  
  # 解压UI文件
  if [ -f "&sourceDir;/ui.tar.gz" ]; then
    echo "  - 正在解压UI文件（解压有点慢，请耐心等待，切勿关闭安装窗口）..."
    mkdir -p "&plgPATH;/ui"
    tar -xzf "&sourceDir;/ui.tar.gz" -C "&plgPATH;/ui"
    echo "  ✓ UI文件解压完成"
  elif [ -d "&sourceDir;/ui" ]; then
    echo "  - 正在复制UI文件（约11MB，请稍候）..."
    cp -r "&sourceDir;/ui" "&plgPATH;/ui"
    echo "  ✓ UI文件复制完成"
  fi
  
  echo "✓ 所有文件已从 &sourceDir; 复制到 &plgPATH;"
else
  echo "❌ 源目录 &sourceDir; 未找到"
  exit 1
fi
</INLINE>
</FILE>


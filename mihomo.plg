function startDownload(target, btn) {
  try {
    if (btn) {
      btn.dataset.oldText = btn.innerText;
      btn.disabled = true;
      btn.innerText = 'ä¸‹è½½ä¸­...';
    }
    var box = document.getElementById('download-msg');
